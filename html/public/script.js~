function httpGetAsync(theUrl, auth, callback)
{
    var xmlHttp = new XMLHttpRequest();
    xmlHttp.onreadystatechange = function() { 
        if (xmlHttp.readyState == 4 && xmlHttp.status == 200)
            callback(xmlHttp.responseText);
    }
    xmlHttp.open("GET", theUrl, true); // true for asynchronous
    xmlHttp.setRequestHeader('Authorization', 'Bearer ' + auth);
    xmlHttp.send(null);
}

function loadResults(data) {
    console.log(data);
    if (data.tracks.items.length) {
	// Default Table settings
	var table = document.getElementById("search-results").createElement("TABLE");
	table.className = "table";
	var thead = table.createElement("THEAD");
	var tr = thead.createElement("TR");
	
	var th = tr.createElement("TH");
	var text = th.createTextNode("#");
	th.appendChild(text);
	tr.appendChild(th);
	
	th = tr.createElement("TH");
	text = th.createTextNode("Title");
	th.appendChild(text);
	tr.appendChild(th);
	
	th = tr.createElement("TH");
	text = th.createTextNode("Artist");
	th.appendChild(text);
	tr.appendChild(th);

	th = tr.createElement("TH");
	text = th.createTextNode("Duration");
	th.appendChild(text);
	tr.appendChild(th);
	
	thead.appendChild(tr);
	table.appendChild(thead);
	var td;
	var tbody = table.createElement("TBODY");
	for (var i = 0, l = data.tracks.items.length; i < l; i++) {
	    tr = tbody.createElement("TR");
	    
	    td = tr.createElement("TD");
	    text = td.createTextNode("" + (i+1));
	    td.appendChild(text);
	    tr.appendChild(td);

	    td = tr.createElement("TD");
	    text = td.createTextNode(data.tracks.items[i].name);
	    td.appendChild(text);
	    tr.appendChild(td);

	    td = tr.createElement("TD");
	    text = td.createTextNode(data.tracks.items[i].artists[0]);
	    td.appendChild(text);
	    tr.appendChild(td);

	    td = tr.createElement("TD");
	    text = td.createTextNode(data.tracks.items[i].duration_ms);
	    td.appendChild(text);
	    tr.appendChild(td);
	    
	    tbody.appendChild(tr);
	}
	table.appendChild(tbody);
    }
    else {
	console.log("No tracks found");
    }
    
}

function triggerSearch() {
    var query = document.getElementById("search-bar").value;
    var link = "https://api.spotify.com/v1/search?q=" + query + "&type=track&market=US&limit=5";
    var auth = getAuth();
    console.log(auth);
    httpGetAsync(link, auth, loadResults);
}
